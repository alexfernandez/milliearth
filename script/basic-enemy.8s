# locate enemy in view, shoot towards it
if enemy in view:
	repeat:
		point cannon at it;
		until it is in scope;
	repeat:
		refine scope at it;
		shoot;
		until it is dead.

# locate enemy in map, accelerate towards it
if enemy in map:
  point at it;
  accelerate.

make finished = 1;

